module purge
module load Python/3.9.5-GCCcore-10.3.0
cd DCGAN-IDATT2502
pip3 install --user -r Requirements
# python3 Entrypoint.py dcgan datasets/img_align_celeba -c 3 -l 3 -e 100
python3 Entrypoint.py gan datasets/celeba-dataset -g lsgan -c 3 -i 64 -l 3 -b 128 -e 15 -lr 0.0002 -b1 0.5 --ndf 32 --ngf 32 --nz 128
uname -a