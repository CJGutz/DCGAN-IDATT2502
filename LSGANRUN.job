#!/bin/sh
#SBATCH --partition=GPUQ
#SBATCH --gres=gpu:p100:1
#SBATCH --account=share-ie-idi
#SBATCH --time=20:00:00
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --mem=12000
#SBATCH --job-name="running dcgan"
